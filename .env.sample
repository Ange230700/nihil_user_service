# nihil_backend\user\.env.sample

# Database connections
USER_DATABASE_URL=<the-user-database-url>

# Frontend API base URL (for CORS)
FRONT_API_BASE_URL=<the-front-api-base-url>

# JWT keys (multiline values must be properly escaped with \n)
JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----\n...\n-----END PUBLIC KEY-----"

# Token lifetimes
ACCESS_TOKEN_TTL=<15m | 1h | 1d>
REFRESH_TOKEN_TTL=<15d | 1h | 1m | 1s>

# Service port
PORT=<the-port>

# Debug mode (0 = off, 1 = on)
DEBUG_ENV=<0 | 1>

# Node environment
NODE_ENV=<development | test | production>
