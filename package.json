{
  "name": "@nihil_backend/user",
  "version": "1.0.0",
  "description": "User API",
  "main": "index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "prisma:generate": "node ./scripts/prisma.mjs generate",
    "prisma:migrate:deploy": "node ./scripts/prisma.mjs migrate deploy",
    "prisma:db:push:force": "node ./scripts/prisma.mjs db push --force-reset --skip-generate",
    "start": "node dist/api/server.js",
    "build": "tsc -b && tsc-alias",
    "pretest": "npm run prisma:db:push:force",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:ci": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand --maxWorkers=1",
    "lint": "eslint .",
    "clean": "rm -rf dist node_modules tsconfig.tsbuildinfo coverage .tmp"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "useESM": true,
          "tsconfig": "<rootDir>/tsconfig.jest.json"
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "^@nihil_backend/user/(.*)\\.js$": "<rootDir>/src/$1.ts",
      "^@nihil_backend/user/(.*)$": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "**/*.{ts,js}"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.4.1",
    "@types/node": "^22.15.29",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "dotenv": "^17.2.1",
    "dotenv-cli": "^9.0.0",
    "jest": "^29.4.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "argon2": "^0.43.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "nihildbuser": "^1.0.11",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  }
}
