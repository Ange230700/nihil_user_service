{
  "name": "@nihil_backend/user",
  "version": "1.0.0",
  "description": "User API",
  "main": "dist/api/server.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "prisma:generate": "node ./scripts/prisma.mjs generate",
    "prisma:migrate:deploy": "node ./scripts/prisma.mjs migrate deploy",
    "prisma:db:push:force": "node ./scripts/prisma.mjs db push --force-reset --skip-generate",
    "start": "node dist/api/server.js",
    "build": "tsc -b && tsc-alias",
    "pretest": "npm run prisma:db:push:force",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config ./jest.config.cjs",
    "test:ci": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config ./jest.config.cjs --runInBand",
    "lint": "eslint .",
    "clean": "rm -rf dist node_modules tsconfig.tsbuildinfo coverage .tmp",
    "prepare": "husky",
    "commit": "git-cz",
    "commitlint": "commitlint --edit",
    "prepush": "cross-env CI=1 npm run test:ci",
    "lint:staged": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --cache --fix"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.{yml,yaml,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@faker-js/faker": "^9.8.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/helmet": "^0.0.48",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^29.4.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.15.29",
    "@types/pino": "^7.0.4",
    "@types/pino-http": "^5.8.4",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^17.2.1",
    "dotenv-cli": "^9.0.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "jest": "^29.4.1",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.1",
    "ts-jest-resolver": "^2.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "validate-branch-name": "^1.3.2"
  },
  "dependencies": {
    "argon2": "^0.43.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "nihildbuser": "^1.0.11",
    "openapi-types": "^12.1.3",
    "pino": "^9.9.0",
    "pino-http": "^10.5.0",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0",
    "zod": "^4.1.1"
  },
  "validate-branch-name": {
    "pattern": "^(master|main|develop){1}$|^(feature|fix|hotfix|release)/.+$",
    "errorMsg": "Branch name must be master, main, develop, feature/xxx, fix/xxx, hotfix/xxx or release/xxx"
  },
  "engines": {
    "node": ">=20"
  }
}
